<Window x:Class="FirstProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FirstProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Point" Margin="0,0,0,0" Width="200" Click="Point" Height="100" VerticalAlignment="Center" HorizontalAlignment="Left"/>
        <Button Content="Square" HorizontalAlignment="Center" Height="100" Width="200" Click="Square" VerticalAlignment="Center"/>
        <Button Content="Triangle" HorizontalAlignment="Right" VerticalAlignment="Center" Height="100" Width="200" Click="Triangle"/>

    </Grid>
</Window>

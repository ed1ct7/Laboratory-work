@echo off 
cls
echo start backup
mkdir backup
copy *.* backup 
echo endbackup
echo off 
cls
echo start backup
if exist backup\4.bat del backup\4.bat 
dir backup
copy *.* backup
dir backup
echo endbackup
@echo off
cls
echo start backup
echo
echo enter folder
echo BACKUP - B    DATA - D
choice /C BD /M "your choice?"
if errorlevel 2 goto d
if errorlevel 1 goto b
:d
copy *.* data
goto end
:b
copy *.* backup
:end
echo stop backup